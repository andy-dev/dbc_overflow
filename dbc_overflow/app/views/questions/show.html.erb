<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @question.body %>
</p>

<p>
  <strong>Votes:</strong>
  <%= @question.votes %>
</p>

<h2>Answer</h2>
<% @question.answers.each do |answer| %>
  <p>
    <strong>Title:</strong>
    <%= answer.title %>
  </p>

  <p>
    <strong>Answer:</strong>
    <%= answer.body %>
  </p>


<% end %>


<h2>Add Answer:</h2>
<%= form_for([@question, @question.answers.build]) do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', questions_path %>
<%= link_to 'Edit', edit_question_path(@question) %>


